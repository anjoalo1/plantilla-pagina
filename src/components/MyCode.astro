---
interface Props {
	codigo: string;
    typeLan: string;
}
const { codigo, typeLan } = Astro.props;
---

<div class="code-css">
    <pre class="pre-code">
        <code  class={typeLan + ' match-braces rainbow-braces no-brace-hover'} data-previewers="color time" data-prismjs-copy="Copy" >
         {codigo}
        </code>
      </pre>
</div>

<style>

 pre{
        overflow: auto;
    } 

    code{
        font-size: 1rem;
    }

    .code-css{
        min-width: none;
        max-width: 800px;
        font-size: 1rem;
    }

</style>